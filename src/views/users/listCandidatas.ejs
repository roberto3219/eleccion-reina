<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head')%>
<body>
        <%- include('../partials/header') %>
         <section class="candidatas">
    <h2>Postulantes a Princesa</h2>
    <div class="cards">
      <% if(candidatas.length > 0) { %>
        <% for(let i = 0; i < candidatas.length; i++){ %>
          <div class="card">
        <img src="/images/candidatas/<%= candidatas[i].img_candidata %>" alt="Candidata<%= i %>">
        <h3><%= candidatas[i].nombre %></h3>
        <p>Representando a <%= candidatas[i].curso %></p>
      </div>
        <%  } %>
      <% }else{ %>
            <h2 class="none-title">No se han encontrado productos.</h2>
      <% } %>
      <div class="card">
        <img src="img/princesa1.jpg" alt="Candidata Princesa 1">
        <h3>Valentina Gómez</h3>
        <p>Representando a 4to 1ra</p>
      </div>
      <div class="card">
        <img src="img/princesa2.jpg" alt="Candidata Princesa 2">
        <h3>Sofía Rivas</h3>
        <p>Representando a 4to 2da</p>
      </div>
      <div class="card">
        <img src="img/princesa3.jpg" alt="Candidata Princesa 3">
        <h3>Martina López</h3>
        <p>Representando a 4to 3ra</p>
      </div>
      <!-- Podés seguir agregando más candidatas -->
    </div>
  </section>
        <%- include('../partials/footer') %>
          <script src="/js/register-login.js"></script>
</body>
</html>