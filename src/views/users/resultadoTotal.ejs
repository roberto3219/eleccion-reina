<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head')%>
<body class="bg-light">
<%- include('../partials/header') %>
<div class="container mt-5">
    <h2 class="mb-4 text-center">🏆 Resultados Finales de las Candidatas</h2>
    <div style="overflow-x: auto;">
      <table style="width: 100%; border-collapse: collapse; border-radius: 8px; overflow: hidden; box-shadow: 0 0 15px rgba(0, 0, 0, 0.05);">
  <thead style="background: #2e86de; color: white;">
    <tr>
      <th style="padding: 12px;">#</th>
            <th style="padding: 12px;">Curso</th>
            <th style="padding: 12px;">Nombre</th>
            <th style="padding: 12px;">Jurado 1</th>
            <th style="padding: 12px;">Jurado 2</th>
            <th style="padding: 12px;">Jurado 3</th>
            <th style="padding: 12px;">Jurado 4</th>
            <th style="padding: 12px; background: #1e6bb8;">Total General</th>
    </tr>
  </thead>
  <tbody>
    <% resultados.forEach((candidata, index) => { %>
            <tr style="background-color: <%= index % 2 === 0 ? '#ffffff' : '#f1f1f1' %>;">
                <td style="padding: 10px; text-align: center;"><%= index + 1 %></td>
                <td style="padding: 10px; text-align: center;"><%= candidata.Curso %></td>
                <td style="padding: 10px; text-align: center;"><%= candidata.Apellido_nombre %></td>
                <td style="padding: 10px; text-align: center;"><%= candidata.total_J1 %></td>
                <td style="padding: 10px; text-align: center;"><%= candidata.total_J2 %></td>
                <td style="padding: 10px; text-align: center;"><%= candidata.total_J3 %></td>
                <td style="padding: 10px; text-align: center;"><%= candidata.total_J4 %></td>
                <td style="padding: 10px; text-align: center; font-weight: bold; color: #1e6bb8;"><%= candidata.total_gral %></td>
            </tr>
    <% }) %>
    </tbody>
</table>
  <form action="/candidatas/descargar-pdf" method="GET">
  <button type="submit" class="btn btn-danger">Descargar PDF</button>
</form>

    </div>
</div>
    <%- include('../partials/footer') %>

</body>
</html>
