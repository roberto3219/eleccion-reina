<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head')%>
<body>
  <section class="center-container">
    <div class="register-container">
        <h2>Registro</h2>
        <ul class="errores">

        </ul>
        <form
          action="/users/register"
          method="POST"
        >
        <% if(error != null || error != undefined){ %>
        <center><p class="error_class" style="margin: 3px 5px; padding-top:20px ;"><%= error %></p></center>
        <% } %>
        <% if(locals.errores && errores.nombre){ %>
          <p class="errorText"> <%= errores.nombre.msg %></p>
        <% } %>        
          <div class="input-group">
            <i class="fa-solid fa-address-card icon"></i>
              <span class="wave"></span>
              <input type="number" placeholder="DNI"
              name="dni"
              id="dni"
              value="<%= locals.old && old.nombre ? old.nombre : '' %>"
              >    
          </div>
          <div class="input-group">
            <i class="fas fa-user icon"></i>
            <span class="wave"></span>
            <input type="text" placeholder="Nombre" 
            name="nombre"
            id="nombre"
            value="<%= locals.old && old.nombre ? old.nombre : '' %>"
            >
          </div>
          <div class="input-group">
            <i class="fas fa-envelope icon"></i>
            <span class="wave"></span>
            <% if(locals.errores && errores.correo){ %>
              <p class="errorText"><%= errores.correo.msg %></p>
            <% } %>
            <input type="email" placeholder="Correo" 
            name="correo"
            id="correo"
            value="<%= locals.old && old.correo ? old.correo : '' %>"
            >
          </div>
          <div class="input-group">
            <i class="fas fa-lock icon"></i>
            <span class="wave"></span>
            <input type="password" placeholder="Contraseña"
            name="password" 
            id="password"
            >
          </div>
          <button class="btn-register" type="submit">Registrarse</button>
          <div class="redirect">
            ¿Ya tienes una cuenta? <a href="login">Inicia sesión</a>
          </div>
        </form>
      </div>
    </section>
      <script src="/js/register-login.js"></script>
      <script src="/js/registerUserValidator.js"></script>
</body>
</html>